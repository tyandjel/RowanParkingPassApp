<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/listViewObjects"
    android:elevation="5dp"
    android:layout_marginTop="20dp"
    android:focusable="false"
    android:gravity="center_horizontal">

    <!-- Johnathan Saunders 2/20/2015
      This is the layout to be put in the list view activity for the list of visitors-->

    <TextView
        android:id="@+id/driver_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/textColor"
        android:padding="5dp"
        android:layout_alignRight="@+id/address_text_view"
        android:layout_alignEnd="@+id/address_text_view"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/address_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/textColor"
        android:layout_below="@+id/driver_text_view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/town_city_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/textColor"
        android:layout_below="@+id/address_text_view"
        android:layout_alignLeft="@+id/address_text_view"
        android:layout_alignStart="@+id/address_text_view"
        android:layout_alignRight="@+id/address_text_view"
        android:layout_alignEnd="@+id/address_text_view"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/new_visitor_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/textColor"
        android:padding="10dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:id="@+id/vehicle_image_view"
        android:src="@drawable/ic_account_circle_white_18dp"
        android:layout_above="@+id/plate_text_view"
        android:layout_toLeftOf="@+id/new_vehicle_text_view"
        android:layout_toStartOf="@+id/new_vehicle_text_view" />
</RelativeLayout>