<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/listViewObjects"
    android:padding="10dp"
    android:elevation="5dp"
    >
    <!-- Johnathan Saunders 2/20/2015
      This is the layout to be put in the list view activity for the list of vehicles-->
    <TextView
        android:id="@+id/car_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/textColor"/>

    <TextView
        android:id="@+id/car_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="car color"
        android:layout_gravity="center"
        android:layout_below="@+id/car_text_view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/plate_text_view"
        android:layout_toEndOf="@+id/plate_text_view" />

    <TextView
        android:id="@+id/plate_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/textColor"
        android:layout_alignTop="@+id/car_color"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/car_text_view"
        android:layout_alignEnd="@+id/car_text_view" />

    <TextView
        android:id="@+id/new_vehicle_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/textColor"/>
</RelativeLayout>