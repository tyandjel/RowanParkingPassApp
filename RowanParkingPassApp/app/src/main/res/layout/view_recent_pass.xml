<?xml version="1.0" encoding="utf-8"?><!-- Johnahtan Saunders 2/16/2015
    This is the layout for the homepage content to be put in the activity_list_view's listView.
     It will contain information about the drive( name, address, city, state, zip code) and car (make color, and license plate state and number)-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/listViewObjects"
    android:elevation="5dp"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/driver_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/textColor" />

    <TextView
        android:id="@+id/address_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/car_color"
        android:layout_alignRight="@+id/car_color"
        android:layout_below="@+id/driver_text_view"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/textColor" />

    <TextView
        android:id="@+id/town_city_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/car_color"
        android:layout_alignRight="@+id/car_color"
        android:layout_below="@+id/address_text_view"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/textColor" />

    <TextView
        android:id="@+id/car_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/town_city_text_view"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/textColor" />

    <TextView
        android:id="@+id/car_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/plate_text_view"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@+id/car_text_view"
        android:gravity="center_horizontal"
        android:text="car color"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_toRightOf="@+id/car_text_view" />

    <TextView
        android:id="@+id/plate_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/car_text_view"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/textColor" />

    <TextView
        android:id="@+id/new_pass_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/textColor" />

    <TextView
        android:id="@+id/car_color_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/car_text_view"
        android:layout_alignEnd="@+id/town_city_text_view"
        android:layout_alignRight="@+id/town_city_text_view"
        android:gravity="center_horizontal|end"
        android:text="Color"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/textColor"
        android:layout_alignLeft="@+id/car_color"
        android:layout_alignStart="@+id/car_color" />

</RelativeLayout>